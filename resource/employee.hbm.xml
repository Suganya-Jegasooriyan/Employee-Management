<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   <class name = "com.ideas2it.employeemanagement.model.Employee" table = "EMPLOYEESTABLE">
      
      <id name = "id" column = "ID">
         <generator class="increment"/>
      </id>
      
      <property name = "firstName" column = "FIRST_NAME"/>
      <property name = "lastName" column = "LAST_NAME"/>
      <property name = "mailId" column = "MAIL_ID"/>
      <property name = "mobileNumber" column = "MOBILE_NUMBER"/>
      <property name = "salary" column = "SALARY"/>
      <property name = "dateOfBirth" column = "DATE_OF_BIRTH"/>
      
      <list name="addressDetails" cascade="all">  
          <key column="id"></key>  
          <index column="type"></index>  
          <one-to-many class="com.ideas2it.employeemanagement.model.Address"/>  
      </list>

      <list name="projectDetails" table="employee_project" fetch="select" cascade="all">  
            <key column="ID" />  
               <index column="type"></index>   
            <many-to-many class="com.ideas2it.employeemanagement.model.EmployeeProject" column="project_Id" />  
      </list>

   </class>
</hibernate-mapping>
 


